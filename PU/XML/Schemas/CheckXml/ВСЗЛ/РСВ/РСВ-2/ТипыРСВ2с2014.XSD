<?xml version="1.0" encoding="Windows-1251"?>
<xs:schema version="1.0" xmlns="http://schema.pfr.ru"  xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://schema.pfr.ru" elementFormDefault="qualified">
	<xs:annotation>
		<xs:documentation xml:lang="ru">XML-подсхема для проверки входящих документов</xs:documentation>
	</xs:annotation>

	<xs:include schemaLocation="../../Типы.XSD"/>
	<xs:include schemaLocation="../ТипыРСВ.XSD"/>

	<xs:complexType name="ТипРаздел1">
		<xs:annotation>
			<xs:documentation>
				Тип Раздел 1 (Расчет по начисленным и уплаченным страховым взносам)
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="СтрокаРаздела" minOccurs="6" maxOccurs="6">
				<xs:annotation>
					<xs:documentation>Строка раздела 1</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:sequence>
						<xs:element name="КодСтроки">
							<xs:annotation>
								<xs:documentation>Код строки раздела 1</xs:documentation>
							</xs:annotation>
							<xs:simpleType>
								<xs:restriction base="ТипКодСтроки">
									<xs:enumeration value="100"/>
									<xs:enumeration value="110"/>
									<xs:enumeration value="120"/>
									<xs:enumeration value="130"/>
									<xs:enumeration value="140"/>
									<xs:enumeration value="150"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
						<xs:group ref="ГрСуммыСтраховыхВзносов"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	

	<xs:group name="ГрРасчетСумм2014">
		<xs:annotation>
			<xs:documentation>Последовательность граф 7 и 8 раздела 2</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="СуммаОПС" type="ТипДеньги" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Начислено страховых взносов на обязательное пенсионное страхование (руб. коп.) за периоды начиная с 2014 г.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="СуммаОМС" type="ТипДеньги" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Начислено страховых взносов на обязательное медицинское страхование (руб. коп.)</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:group>

	<xs:group name="ГрРасчетСумм2015">
		<xs:annotation>
			<xs:documentation>Последовательность граф 7 и 8 раздела 2</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="СуммаОПС" type="ТипДеньги" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Начислено страховых взносов на обязательное пенсионное страхование (руб. коп.)</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="СуммаОМС" type="ТипДеньги" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Начислено страховых взносов на обязательное медицинское страхование (руб. коп.)</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:group>

	<xs:group name="ГрЧленКФХ">
		<xs:annotation>
			<xs:documentation>Последовательность граф с 2 по 6 разделов 2 и 3 формы 2014 года, также последовательность граф с 2 по 6 раздела 2 и с 3 по 7 раздела 3 формы 2015 года</xs:documentation>
		</xs:annotation>
		<xs:sequence>			
			<xs:element name="ФИО" type="ТипФИО">
				<xs:annotation>
					<xs:documentation>ФИО члена КФХ</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="СтраховойНомер" type="ТипСтраховойНомер">
				<xs:annotation>
					<xs:documentation>Страховой номер индивидуального лицевого счета</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="ГодРождения" type="xs:gYear">
				<xs:annotation>
					<xs:documentation>Год рождения</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="НачалоПериода" type="xs:date">
				<xs:annotation>
					<xs:documentation>Дата начала расчетного периода</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="КонецПериода" type="xs:date">
				<xs:annotation>
					<xs:documentation>Дата окончания расчетного периода</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:group>

	</xs:schema>
